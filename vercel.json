{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/index.html"
    }
  ],
  "env": {
    "MONGO": "@mongo",
    "JWT_SECRET": "@jwt_secret"
  },
  "build": {
    "env": {
      "VITE_FIREBASE_API_KEY": "@vite_firebase_api_key"
    }
  }
}
